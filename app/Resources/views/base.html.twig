<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}GuestHouse{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('https://fonts.googleapis.com/css?family=Andika|Bad+Script|Qwigley') }}" rel="stylesheet">
            <link rel="stylesheet" href={{ asset('bundles/gesthouse/css/style.css') }}>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('http://image.noelshack.com/fichiers/2017/17/1493283689-favicon.png') }}" />
    </head>
    <body>
        {% block nav %}<div class="nav">
            <span class="nav_word nv1"><a href="{{ path('homepage') }}">Accueil</a></span>
            <span class="nav_word nv2"><a href="{{ path('bedrooms') }}">Chambres & Tarifs</a></span>
            <span class="nav_word nv3"><a href="{{ path('activities') }}">Activit√©s</a></span>
            <span class="nav_word nv4"><a href="{{ path('contact') }}">Contact</a></span>
        </div>{% endblock %}
        {% block body %}{% endblock %}
