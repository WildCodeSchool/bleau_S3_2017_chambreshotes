            <div class="footer">
                <img src="{{ asset('http://image.noelshack.com/fichiers/2017/17/1493302914-twitter.png') }}" alt="logo twitter" class="logo">
                <img src="{{ asset('http://image.noelshack.com/fichiers/2017/17/1493302914-pinterest.png') }}" alt="logo pinterest" class="logo">
                <img src="{{ asset('http://image.noelshack.com/fichiers/2017/17/1493302914-tumblr.png') }}" alt="logo tumblr" class="logo">
                <img src="{{ asset('http://image.noelshack.com/fichiers/2017/17/1493302914-facebook.png') }}" alt="logo facebook" class="logo">

            </div>
        {% endblock %}
        {% block javascripts %}{% endblock %}
